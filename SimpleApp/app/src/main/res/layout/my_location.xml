<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.imran.simpleapp.MyLocation"
        android:clickable="true"
        android:baselineAligned="true"
        android:background="@android:color/background_light"
        android:scrollIndicators="start|top">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="db Udpate Button"
            android:id="@+id/buttonTEST"
            android:visibility="invisible" />

        <TextView android:id="@+id/CheckLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp" />


    <Button
        android:id="@+id/start_updates_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:onClick="startUpdatesButtonHandler"
        android:text="@string/start_updates"
        android:drawableLeft="@drawable/icon_start"
        android:background="@android:color/holo_blue_bright"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />


    <Button
        android:id="@+id/stop_updates_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:enabled="false"
        android:gravity="center"
        android:onClick="stopUpdatesButtonHandler"
        android:text="@string/stop_updates"
        android:drawableLeft="@drawable/icon_stop"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/black"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/holo_blue_bright"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:contextClickable="true"
        android:textColorHighlight="#ff0000"
        android:textColorHint="@android:color/holo_blue_bright"
        android:textColorLink="@android:color/holo_green_light"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/latitude_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHighlight="@android:color/holo_blue_bright"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/holo_orange_light"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/longitude_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHighlight="@android:color/black"
        android:textColorHint="#4400ff"
        android:textColorLink="#0088ff"
        android:textIsSelectable="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/last_update_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="#ff0004"
        android:textColorLink="#00ff73"
        />



        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:id="@+id/logomellowhost"
            android:src="@drawable/logo"
            style="@style/Base.Widget.AppCompat.ButtonBar.AlertDialog"
            android:accessibilityLiveRegion="@integer/google_play_services_version"
            android:accessibilityTraversalAfter="@integer/status_bar_notification_info_maxnum"
            android:accessibilityTraversalBefore="@integer/design_snackbar_text_max_lines"
            android:adjustViewBounds="true"
            android:layout_gravity="right"
            android:layout_marginTop="90dp"
            android:background="@android:color/holo_green_dark" />



    </LinearLayout>


</ScrollView>

