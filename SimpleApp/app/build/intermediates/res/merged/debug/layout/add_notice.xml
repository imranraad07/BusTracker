<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.imran.simpleapp.BusRoot"
        android:clickable="true"
        android:baselineAligned="true"
        android:background="@android:color/white"
        android:scrollIndicators="start|top">

    <TextView
        android:id="@+id/addnotice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Route:"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <!-- Spinner Element -->
    <Spinner
        android:id="@+id/myroute1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:prompt="@string/select_your_root"
        android:background="@android:color/holo_blue_bright"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textStyle="bold"
        android:drawSelectorOnTop="true"
        android:layout_weight="2.16"
        android:clickable="true"
        android:contextClickable="false"
        android:importantForAccessibility="auto"
        android:spinnerMode="dialog"
        android:drawableLeft="@drawable/arrow_down"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/addnotice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notice(max 150 characters)"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/mynotice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="150"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" >
        <requestFocus />
    </EditText>


        <Button
        android:id="@+id/addnotice5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    </LinearLayout>
</ScrollView>
